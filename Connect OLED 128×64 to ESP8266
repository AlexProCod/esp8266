#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

// Определение пинов для I2C
#define SCREEN_WIDTH 128 // Ширина OLED дисплея в пикселях
#define SCREEN_HEIGHT 64 // Высота OLED дисплея в пикселях
#define OLED_RESET -1 // Пин сброса (используется для других протоколов)

// Объект для работы с дисплеем
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);

void setup() {
  Serial.begin(115200);

  // Инициализация дисплея
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { // Адрес I2C по умолчанию 0x3C
    Serial.println(F("SSD1306 allocation failed"));
    for(;;);
  }
  
  // Очистка буфера и вывод текста
  display.clearDisplay();
  display.setTextSize(1); // Размер текста
  display.setTextColor(SSD1306_WHITE); // Цвет текста (белый)
  display.setCursor(0,0); // Позиция курсора (начало)
  display.println(F("Hello, World!")); // Вывод текста
  display.display(); // Отображение на экране
  delay(2000); // Пауза
}

void loop() {
  // Ваш код может обновлять информацию на дисплее здесь
}
